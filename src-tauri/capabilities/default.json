{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "tool"
  ],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "window:allow-show",
    "window:allow-minimize",
    "window:allow-start-dragging",
    "window:allow-maximize",
    "window:allow-unmaximize",
    "window:allow-close",
    "window:allow-hide",
    "window-state:allow-save-window-state",
    "window-state:allow-restore-state",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    }
  ]
}